<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IMS-Customer Table</title>
  <link rel="icon" type="image/x-icon" href="/favicon.png">

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: black;
      color: white;
    }
    .dark-header {
      background-color: #1174de;
      color: white;
      padding: 40px 0;
      margin-bottom: 20px;
    }
    .custom-heading {
      margin-bottom: 80px;
    }

  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center mb-4 dark-header">
      <div class="col text-center">
        <h1>INVENTORY MANAGEMENT SYSTEM</h1>
      </div>
    </div>
    <div class="row mb-4 custom-heading">
      <div class="col">
        <h2>CUSTOMER MASTER TABLE</h2>
        <form action="/submitCustomer" method="post" id="customerForm">
          <!--<label for="cusid">Customer ID:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="text" id="cusid" name="cusid">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <label for="cusname">Customer Name:</label>&nbsp;
          <input type="text" id="cusname" name="cusname">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <label for="cuscont">Customer Contact:</label>&nbsp;
          <input type="text" id="cuscont" name="cuscont">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <label for="cusadd">Customer Address:</label>&nbsp;
          <input type="text" id="cusadd" name="cusadd">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="table">
        <thead class="thead-dark">
          <table class="table table-striped" style="color: white; --bs-table-striped-color: white;">
          <tr>
            <th>CUSTOMER_ID</th>
            <th>CUSTOMER_NAME</th>
            <th>CUSTOMER_CONTACT</th>
            <th>CUSTOMER_ADDRESS</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(row => { %>
            <tr>
              <td><%= row.CUSTOMER_ID %></td>
              <td><%= row.CUSTOMER_NAME %></td>
              <td><%= row.CUSTOMER_CONTACT %></td>
              <td><%= row.CUSTOMER_ADDRESS %></td>
              <td>
                <a href="/edit/<%= row.CUSTOMER_ID %>" class="btn btn-primary btn-sm">Edit</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <a class="btn btn-primary" href="http://127.0.0.1:5500/landing.html" role="button">Back</a>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>