<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IMS-Sale Table</title>
  <link rel="icon" type="image/x-icon" href="info/favicon.png">

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: black;
      color: white;
    }
    .dark-header {
      background-color: #1174de;
      color: white;
      padding: 40px 0;
      margin-bottom: 20px;
    }
    .custom-heading {
      margin-bottom: 80px;
    }

  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center mb-4 dark-header">
      <div class="col text-center">
        <h1>INVENTORY MANAGEMENT SYSTEM</h1>
      </div>
    </div>
    <div class="row mb-4 custom-heading">
      <div class="col">
        <h2>SALE TRANSACTION TABLE</h2>
        <form action="/submitSale" method="post" id="saleForm">
          <!--<label for="cusid">Customer ID:</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input type="text" id="cusid" name="cusid">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-->
          <label for="cusid">Customer ID:</label> <br>
          <input type="text" id="cusid" name="cusid"> <br>
          <label for="itemid">Item ID:</label> <br>
          <input type="text" id="itemid" name="itemid"> <br>
          <label for="transdate">Transaction Date:</label> <br>
          <input type="date" id="transdate" name="transdate"> <br>
          <label for="quantsold">Quantity Sold:</label> <br>
          <input type="text" id="quantsold" name="quantsold"> <br>
          <label for="rate">Rate:</label> <br>
          <input type="text" id="rate" name="rate"> <br>
          <label for="tax">Tax:</label> <br>
          <input type="text" id="tax" name="tax"> <br>
          <label for="totamt">Total Amount:</label> <br>
          <input type="text" id="totamt" name="totamt"> <br> <br>
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="table">
        <thead class="thead-dark">
          <table class="table table-striped" style="color: white; --bs-table-striped-color: white;">
          <tr>
            <th>TRANSACTION_ID</th>
            <th>CUSTOMER_ID</th>
            <th>ITEM_ID</th>
            <th>TRANSACTION_DATE</th>
            <th>QUANTITY_SOLD</th>
            <th>RATE</th>
            <th>TAX</th>
            <th>TOTAL_AMOUNT</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(row => { %>
            <tr>
              <td><%= row.TRANSACTION_ID %></td>
              <td><%= row.CUSTOMER_ID %></td>
              <td><%= row.ITEM_ID %></td>
              <td><%= row.TRANSACTION_DATE %></td>
              <td><%= row.QUANTITY_SOLD %></td>
              <td><%= row.RATE %></td>
              <td><%= row.TAX %></td>
              <td><%= row.TOTAL_AMOUNT %></td>
              <td>
                <a href="/edit/<%= row.TRANSACTION_ID %>" class="btn btn-primary btn-sm">Edit</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <a class="btn btn-primary" href="http://127.0.0.1:5500/landing.html" role="button">Back</a>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>